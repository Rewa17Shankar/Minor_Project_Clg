<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard</title>
  <link rel="stylesheet" href="/styles.css" />
  <style>
    /* Global Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background: linear-gradient(135deg, #a1c4fd, #c2e9fb); /* Smooth gradient background */
  color: #2f3640;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  transition: background-color 0.3s ease;
}

a {
  text-decoration: none;
  color: inherit;
  transition: color 0.3s ease;
}

h1, h2, h3, h4 {
  color: #2f3640;
}

/* Navbar */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  color: #2f3640;
  padding: 20px 40px;
  width: 100%;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  z-index: 1000;
  transition: background-color 0.3s ease;
  border-bottom: 2px solid #dfe4ea;
}

.navbar .user-info {
  font-size: 18px;
  font-weight: 600;
  color: #6c757d;
}

.navbar .menu a {
  color: #2f3640;
  margin-left: 25px;
  font-size: 16px;
  font-weight: 500;
  transition: color 0.3s ease;
}

.navbar .menu a:hover {
  color: #3498db;
  transform: translateY(-2px);
}

/* Sidebar */
.sidebar {
  width: 250px;
  background-color: #ffffff;
  color: #2f3640;
  padding-top: 60px;
  position: fixed;
  top: 50px;
  left: 0;
  height: calc(100vh - 50px);
  box-shadow: 4px 0 10px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
  border-right: 2px solid #dfe4ea;
}

.sidebar ul {
  list-style: none;
  padding: 0;
}

.sidebar ul li {
  padding: 20px;
  text-align: center;
  border-bottom: 1px solid #e2e2e2;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.sidebar ul li a {
  color: #2f3640;
  font-size: 18px;
  font-weight: 500;
  padding: 10px 15px;
  transition: color 0.3s ease;
}

.sidebar ul li:hover {
  background-color: #3498db;
  transform: translateX(10px);
}

.sidebar ul li a:hover {
  color: white;
}

/* Main Content */
.main-content {
  margin-left: 270px;
  padding: 40px;
  padding-top: 90px;
  width: calc(100% - 270px);
  overflow-y: auto;
  background-color: #ffffff;
  border-radius: 8px;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
  animation: slideIn 1s ease-out;
}

.main-content h2 {
  font-size: 28px;
  margin-bottom: 20px;
  color: #2c3e50;
  animation: fadeIn 1s ease-out;
  letter-spacing: 1px;
}

.main-content p {
  font-size: 16px;
  color: #7f8c8d;
  line-height: 1.5;
  margin-bottom: 20px;
}

.table-container {
  display: flex;
  justify-content: center;
  overflow-x: auto;
  margin-top: 30px;
  animation: fadeIn 1s ease-out 0.3s;
}

.quiz-table {
  width: 90%;
  min-width: 600px;
  border-collapse: collapse;
  background-color: #ffffff;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  border-radius: 8px;
  overflow: hidden;
}

.quiz-table th, .quiz-table td {
  padding: 18px;
  text-align: center;
  font-size: 16px;
  border-bottom: 1px solid #ddd;
  color: #34495e;
  transition: background-color 0.3s ease;
}

.quiz-table th {
  background-color: #3498db;
  color: white;
  font-weight: bold;
}

.quiz-table tbody tr:hover {
  background-color: #f1f1f1;
}

.footer {
  text-align: center;
  margin-top: 40px;
  padding: 20px;
  background-color: #2c3e50;
  color: white;
  position: relative;
  bottom: 0;
  width: 100%;
  animation: fadeIn 1s ease-out 0.6s;
}

/* Progress Circle */
.progress-container {
  margin-top: 30px;
  text-align: center;
  animation: fadeIn 1s ease-out 0.3s;
}

.progress-circle {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  margin: 0 auto 20px;
  background: conic-gradient(
    #2ecc71 0% 0%,
    #f39c12 0% 0%,
    #e74c3c 0% 100%
  );
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  transition: background 0.3s ease;
}

.legend {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 10px;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 16px;
}

.legend-color {
  width: 16px;
  height: 16px;
  border-radius: 50%;
  margin-right: 8px;
}

.easy {
  background-color: #2ecc71;
}

.medium {
  background-color: #f39c12;
}

.hard {
  background-color: #e74c3c;
}

/* Animations */
@keyframes fadeIn {
  0% {
    opacity: 0;
    transform: translateY(20px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn {
  0% {
    transform: translateX(20px);
    opacity: 0;
  }
  100% {
    transform: translateX(0);
    opacity: 1;
  }
}

/* Mobile responsiveness */
@media (max-width: 768px) {
  .navbar {
    flex-direction: column;
    align-items: flex-start;
    padding: 15px 20px;
  }

  .sidebar {
    width: 220px;
    top: 80px;
  }

  .main-content {
    margin-left: 0;
    padding: 20px;
    width: 100%;
  }

  .quiz-table {
    width: 100%;
  }

  .legend {
    flex-direction: column;
    align-items: flex-start;
  }
}

  </style>
</head>
<body>

  <div class="navbar">
    <div class="user-info">
      <strong><%= user.name %></strong> | <%= user.email %>
    </div>
    <div class="menu">
      <a href="/">Home</a>
      <a href="#">Help</a>
      <a href="/logout" style="color: red;">Logout</a>
    </div>
  </div>

  <div class="sidebar">
    <ul>
      <li><a href="/quiz-setup">Quiz Menu</a></li>
      <li><a href="/about">About Us</a></li>
    </ul>
  </div>

  <div class="main-content">
    <h2>Quiz History</h2>
    <p style="margin-bottom: 10px; font-size: 16px; color: #7f8c8d;">
      <%= new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
    </p>

    <div class="progress-container">
      <h3 style="margin-bottom: 10px;">Difficulty Progress</h3>
      <div class="progress-circle" id="difficultyProgress"></div>
      <div class="legend">
        <div class="legend-item"><div class="legend-color easy"></div>Easy</div>
        <div class="legend-item"><div class="legend-color medium"></div>Medium</div>
        <div class="legend-item"><div class="legend-color hard"></div>Hard</div>
      </div>
    </div>

    <div class="table-container">
      <table class="quiz-table">
        <thead>
          <tr>
            <th>Score</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% quizHistory.forEach(function(result) { %>
            <tr>
              <td><%= result.correct_answers %> / <%= result.total_questions %></td>
              <td><%= new Date(result.submitted_at).toLocaleString() %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    const quizHistory = <%- JSON.stringify(quizHistory) %>;

    const counts = { easy: { correct: 0, total: 0 }, medium: { correct: 0, total: 0 }, hard: { correct: 0, total: 0 } };

    quizHistory.forEach(q => {

    

      const totalQ = q.total_questions || 0;
      const correct = q.correct_answers || 0;

      let level = '';
      if (totalQ <= 10) level = 'easy';
      else if (totalQ <= 25) level = 'medium';
      else level = 'hard';

      counts[level].correct += correct;
      counts[level].total += totalQ;
    });

    const easyPercent = counts.easy.total > 0 ? (counts.easy.correct / counts.easy.total) * 100 : 0;
    const mediumPercent = counts.medium.total > 0 ? (counts.medium.correct / counts.medium.total) * 100 : 0;
    const hardPercent = counts.hard.total > 0 ? (counts.hard.correct / counts.hard.total) * 100 : 0;

    const total = easyPercent + mediumPercent + hardPercent;

    const getPercent = (val) => (total === 0 ? 0 : (val / total) * 100);

    const progressCircle = document.getElementById('difficultyProgress');
    const gradient = `conic-gradient(
        #2ecc71 0% ${getPercent(easyPercent)}%,
        #f39c12 ${getPercent(easyPercent)}% ${getPercent(easyPercent) + getPercent(mediumPercent)}%,
        #e74c3c ${getPercent(easyPercent) + getPercent(mediumPercent)}% 100%
    )`;

    progressCircle.style.background = gradient;
    if (quizHistory.length === 0) {
      // Set the progress circle to light black if there's no quiz history
      document.getElementById('difficultyProgress').style.backgroundColor = "#2f3640"; // Light black color
    }
  </script>

</body>
</html>
